<div class="page-width">
  <div class="section-header text-center">
    <h3>{{section.settings.heading}}</h3>
    <h4 class="h2">{{ pages[section.settings.page].title }}</h4>
  </div>

  <div class="grid">
    <div class="grid__item one-whole">
      <div class="page-wrapper">
        {{ pages[section.settings.page].content }}
        <p>{{section.settings.description}}<p>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Dynamic section 1",
    "settings": [
					{
						"type":"text",
						"label":"your headline for the section",
						"id":"heading"

					},
					{
						"type":"richtext",
						"label":"your description",
						"id":"description"

					}
					
				],
	"blocks":	[
					{
						"type":"image",
						"name":"image",
						"settings":[
										{
											"type":"image_picker",
											"label": "your image",
											"id":"image"
										}
									]
  					}
				],
	"presets": [
      {
        "name": "Dynamic section 1",
        "category": "Task Sections"
      }
		]
	}
{% endschema %}


